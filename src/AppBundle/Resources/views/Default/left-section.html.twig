                            {% endif %}
                        {% endfor %}
                    </div>
                    <h3 class="skills_title">{{ param.skill_5.value }}</h3>
                </li>
                {% endif %}
                {% if param.skill_6.value is not null %}
                <li>
                    <div class="skills">
                        {% for i in 1..param.skill_6_level.value %}
                            <i class="fa fa-star" aria-hidden="true"></i>
                        {% endfor %}
