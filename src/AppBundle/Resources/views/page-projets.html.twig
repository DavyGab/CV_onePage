<div id="projets" class="content col-md-12">
    <div class="row">
        <div class="section first-section">
            <div class="page-title">
                <h2>Projets</h2>
            </div>
        </div>
        <div class="section paddT30 margmdB">
            <div class="col-md-12">
                <div class="resume-education col-md-12">
                    <div class="timeline">
                        <div class="timeline-bar"></div>
                        <div class="timeline-inner clearfix">
                            {% for experience in experiences if experience.category == 3 %}
                                <div class="timeline-box timeline-box-{% if loop.index % 2 == 0 %}right{% else %}left{% endif %}">
                                    <span class="dot"></span>
                                    <div class="timeline-box-inner animate-right">
                                        {% if experience.subCategory is not null %}
                                            <div class="ribbon ribbon-{% if loop.index % 2 == 0 %}right{% else %}left{% endif %}"><span>{{ experience.subCategory }}</span></div>
                                        {% endif %}
                                        <span class="arrow"></span>
                                        <div class="date">{{ experience.startDate }} - {{ experience.endDate }}</div>
                                        <div class="row">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <h3>{{ experience.title }}</h3>
                                                {% if experience.url is not null %}
                                                <a href="{{ experience.url }}" target="_blank"><h4>{{ experience.subTitle }}</h4></a>
                                                {% else %}
                                                <h4>{{ experience.subTitle }}</h4>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <p class="text-justify">{{ experience.description|raw }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'AppBundle:Default:footer.html.twig' %}
    </div>
</div>
