<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Admin Theme v3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% stylesheets filter='cssrewrite' output='css/compiled/admin.css'
        'css/bootstrap.min.css'
        'css/bootstrap-theme.min.css'
        'css/font-awesome/css/font-awesome.min.css'

        'bundles/admin/css/bootstrap-switch.min.css'
        'bundles/admin/css/jquery-ui.min.css'
        'bundles/admin/css/buttons.css'
        'bundles/admin/css/styles.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
<div class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <!-- Logo -->
                <div class="logo">
                    <h1><a href="{{ path('home') }}">Administration CV</a></h1>
                </div>
            </div>
            <div class="col-md-2 col-md-offset-5">
                <div class="navbar navbar-inverse" role="banner">
                    {% include 'AdminBundle::navbar.html.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content">
    <div class="row">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-md-2">
                {% include 'AdminBundle::menu.html.twig' %}
            </div>
            <div class="col-md-10">
                {% block body %}
                {% endblock %}
            </div>
        {% else %}
            <div class="col-md-4 col-md-offset-4 margT30 margB30">
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        {% endif %}
    </div>
</div>

<footer>
    <div class="container">
        <div class="copy text-center">
            Copyright 2016
        </div>
    </div>
</footer>

{% javascripts output='js/compiled/admin.js'
    'js/jquery-2.2.4.min.js'
    'js/bootstrap.min.js'

    '@AdminBundle/Resources/public/js/bootstrap-switch.js'
    '@AdminBundle/Resources/public/js/jquery-ui.min.js'
    '@AdminBundle/Resources/public/js/custom.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="//cdn.ckeditor.com/4.6.0/standard/ckeditor.js"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>